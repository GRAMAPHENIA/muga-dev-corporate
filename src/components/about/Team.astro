---
const team = [
  {
    name: 'Cabaña Lago',
    image: '/cabins/cab-one.webp',
    job: 'Vista al lago y bosque',
  },
  {
    name: 'Cabaña Montaña',
    image: '/cabins/cab-two.webp',
    job: 'Ideal para familias',
  },
  {
    name: 'Cabaña Premium',
    image: '/cabins/cab-three.webp',
    job: 'Confort y privacidad',
  },
  {
    name: 'Cabaña Eco',
    image: '/cabins/cab-four.webp',
    job: 'Sostenible y moderna',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="sm:space-8 space-y-12">
  <h2 class="text-3xl font-medium tracking-tight sm:text-4xl font-heading">Nuestras cabañas</h2>
      <ul role="list" class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {
          team.map((item) => (
            <li class="border-primary-900/10 rounded-3xl border px-6 py-8">
              <div class="space-y-6">
                <img
                  class="mx-auto h-40 w-full object-cover rounded-3xl"
                  src={item.image.replace('.webp', '-800.webp')}
                  srcset={`
                    ${item.image.replace('.webp', '-400.webp')} 400w,
                    ${item.image.replace('.webp', '-800.webp')} 800w,
                    ${item.image.replace('.webp', '-1520.webp')} 1520w
                  `}
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 80vw, 800px"
                  alt={item.name}
                />
                <div class="text-center">
                  <h3 class="text-lg font-medium">{item.name}</h3>
                  <p class="text-primary-950/70 text-base">{item.job}</p>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
